        &copy2023 genecathcart.com
    </footer>

    <!-- jQuery JS File -->
    <script src="/js/vendor/jQuery/jquery-3.6.3.min.js"></script>

    <!-- Bootstrap JS File -->
    <script src="/js/vendor/Bootstrap/bootstrap.min.js"></script>

    <!-- Navbar JS File -->
    <script src="/js/Main.js"></script>
    @RenderSection("scripts", required: false);
