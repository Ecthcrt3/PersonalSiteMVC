    <!-- Bootstrap StyleSheet -->
    <link rel="stylesheet" href="/css/vendor/bootstrap.min.css">

    <!-- Bootstrap Icon CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" />

    <!-- link to font awesome free icons -->
